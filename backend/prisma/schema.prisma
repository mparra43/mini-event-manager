generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  date        String
  description String?
  place       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
